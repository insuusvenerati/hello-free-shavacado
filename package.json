{
  "name": "hello-free-shavacado",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "repository": "git@github.com:insuusvenerati/hello-free-shavacado.git",
  "author": "Sean Norwood <norwood.sean@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "stop": "turbo run stop",
    "start": "turbo run start",
    "prisma:migrate": "yarn workspace @stiforr/backend prisma migrate",
    "prisma:studio": "yarn workspace @stiforr/backend prisma studio",
    "commit": "cz"
  },
  "workspaces": {
    "packages": [
      "apps/*"
    ],
    "nohoist": [
      "@stiforr/frontend/**",
      "@stiforr/backend/**"
    ]
  },
  "devDependencies": {
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "16.0.1",
    "eslint": "8.18.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "nps": "5.10.0",
    "nps-utils": "1.7.0",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "turbo": "1.3.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint",
    "*.{ts,tsx,css,md}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "volta": {
    "node": "16.15.1",
    "yarn": "1.22.19",
    "npm": "8.13.2"
  }
}
