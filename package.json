{
  "name": "remix-tailwind",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "postinstall": "prisma generate",
    "build": "run-s build:*",
    "build:css": "cross-env NODE_ENV=production postcss ./styles/tailwind.css -o app/styles/tailwind.css",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "dev": "concurrently \"pnpm run dev:css\" \"pnpm run dev:remix\"",
    "dev:css": "postcss ./styles/tailwind.css -w -o app/styles/tailwind.css",
    "dev:remix": "cross-env NODE_ENV=development binode --require ./mocks -- @remix-run/dev:remix dev",
    "format": "prettier --write .",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "algolia:seed": "dotenv -e .env ts-node other/seedAlgolia.ts",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "remix-serve build",
    "start:mocks": "binode --require ./mocks -- @remix-run/serve:remix-serve build",
    "vitest": "vitest",
    "test:e2e:dev": "npx playwright test --trace=on",
    "test:e2e:run": "playwright test",
    "typecheck": "tsc -b",
    "validate": "run-p \"vitest --run\" lint typecheck test:e2e:run",
    "playwright:codegen": "playwright codegen localhost:3000 --viewport-size=1920,1080"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/recipe-data-scraper",
    "/patches",
    "/test-results",
    "/playwright-report"
  ],
  "dependencies": {
    "@algolia/autocomplete-core": "^1.7.3",
    "@algolia/autocomplete-js": "^1.7.3",
    "@algolia/autocomplete-plugin-recent-searches": "^1.7.3",
    "@algolia/autocomplete-theme-classic": "^1.7.3",
    "@mantine/hooks": "^5.7.0",
    "@prisma/client": "^4.5.0",
    "@remix-run/node": "^1.7.5",
    "@remix-run/react": "^1.7.5",
    "@remix-run/serve": "^1.7.5",
    "@remix-run/server-runtime": "^1.7.5",
    "algoliasearch": "4.14.2",
    "axios": "1.1.3",
    "bcryptjs": "^2.4.3",
    "cheerio": "1.0.0-rc.12",
    "daisyui": "^2.38.1",
    "instantsearch.js": "^4.49.1",
    "isbot": "^3.6.3",
    "iso8601-duration": "^2.1.1",
    "microdata-node": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-instantsearch-hooks-server": "^6.38.0",
    "react-instantsearch-hooks-web": "^6.38.0",
    "recipe-data-scraper": "1.4.1",
    "remix-typedjson": "^0.1.5",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@playwright/test": "^1.27.1",
    "@remix-run/dev": "^1.7.5",
    "tsx": "^3.11.0",
    "@remix-run/eslint-config": "^1.7.5",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie": "^0.5.1",
    "@types/eslint": "^8.4.10",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@types/workbox-core": "^4.3.1",
    "@vitejs/plugin-react": "^2.2.0",
    "@vitest/coverage-c8": "^0.25.0",
    "autoprefixer": "^10.4.13",
    "binode": "^1.0.5",
    "c8": "^7.12.0",
    "concurrently": "^7.5.0",
    "cookie": "^0.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-playwright": "^0.11.2",
    "happy-dom": "^7.6.6",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "msw": "^0.48.0",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.5.0",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "postcss-lightningcss": "^0.6.0",
    "prettier": "2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "prisma": "^4.6.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.2.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4",
    "vite": "^3.2.3",
    "vite-tsconfig-paths": "^3.5.2",
    "vitest": "^0.25.1"
  },
  "engines": {
    "node": ">=16"
  },
  "prisma": {
    "seed": "npx tsx --experimental-fetch prisma/seed.ts"
  },
  "volta": {
    "node": "18.12.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm lint",
      "prettier --write"
    ]
  },
  "pnpm": {
    "patchedDependencies": {
      "recipe-data-scraper@1.4.1": "patches/recipe-data-scraper@1.4.1.patch"
    }
  }
}
