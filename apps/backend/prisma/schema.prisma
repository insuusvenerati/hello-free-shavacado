generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ingredient {
  createdAt         DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt         DateTime? @updatedAt
  id                String    @id @default(dbgenerated("fn_ksuid()"))
  country           String?
  type              String?
  slug              String?
  description       String?
  internalName      String?   @map("internal_name")
  shipped           Boolean?
  imageLink         String?   @map("image_link")
  imagePath         String?   @map("image_path")
  usage             Int?
  hasDuplicatedName Boolean?
  uuid              String?
  name              String?
  family            Json?
  allergens         Json[]

  @@map("ingredient")
}

model Hellofresh {
  createdAt   DateTime?                @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime?                @updatedAt
  textSearch  Unsupported("TSVECTOR")?
  name        String?
  description String?
  recipe      Json?
  id          String                   @id @default(dbgenerated("fn_ksuid()"))

  @@index([textSearch])
  @@map("hellofresh")
}

model PopularRecipe {
  createdAt DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime? @updatedAt
  name      String?
  recipe    Json?
  id        String    @id @default(dbgenerated("fn_ksuid()"))

  @@map("popular_recipe")
}

model Recipe {
  createdAt DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime? @updatedAt
  userId    String?   @map("user_id")
  name      String?
  imagePath String?   @map("image_path")
  id        String    @id @default(dbgenerated("fn_ksuid()"))
  slug      String    @unique
  uuid      String    @unique
  groceries Grocery[]

  @@map("recipe")
}

model Grocery {
  createdAt  DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt  DateTime? @updatedAt
  ingredient String
  amount     Float?
  unit       String?
  imagePath  String?   @map("image_path")
  id         String    @id @default(dbgenerated("fn_ksuid()"))
  userId     String    @map("user_id")
  family     String
  slug       String
  uuid       String
  recipeId   String    @map("recipe_id")
  recipe     Recipe    @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@map("grocery")
}

model ImportedRecipe {
  updatedAt               DateTime? @updatedAt
  createdAt               DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)
  id                      String    @id @default(dbgenerated("fn_ksuid()"))
  name                    String
  image                   String
  description             String
  cookTime                String    @map("cook_time")
  prepTime                String    @map("prep_time")
  totalTime               String    @map("total_time")
  recipeYield             String
  recipeIngredients       String[]
  recipeInstructions      String[]
  recipeCategories        String[]
  recipeCuisines          String[]
  recipeTypes             String[]
  keywords                String[]
  cookTimeOriginalFormat  String?   @map("cooktime_original_format")
  prepTimeOriginalFormat  String?   @map("preptime_original_format")
  totalTimeOriginalFormat String?   @map("totaltime_original_format")
  url                     String
  userId                  String    @map("user_id")
}
