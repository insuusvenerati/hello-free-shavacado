generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hellofresh {
  createdAt DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)
  recipe    Json?
  id        String    @id @default(dbgenerated("fn_ksuid()"))

  @@map("hellofresh")
}

model Recipes {
  createdAt DateTime?   @default(now()) @map("created_at") @db.Timestamptz(6)
  slug      String      @unique
  userId    String?     @map("user_id")
  name      String?
  imagePath String?     @map("image_path")
  id        String      @id @default(dbgenerated("fn_ksuid()"))
  groceries Groceries[]
  uuid      String      @unique

  @@map("recipes")
}

model Groceries {
  createdAt  DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)
  ingredient String
  amount     Float?
  unit       String?
  imagePath  String?   @map("image_path")
  id         String    @id @default(dbgenerated("fn_ksuid()"))
  userId     String    @map("user_id")
  slug       String
  family     String
  uuid       String
  recipe     Recipes   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId   String    @map("recipe_id")

  @@map("groceries")
}
